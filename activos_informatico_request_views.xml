                <group expand="1" string="Group By">
                    <filter string="Solicitante" name="requester_employee_id" context="{'group_by':'requester_employee_id'}"/>
                    <filter string="Responable" name="accountable_employee_id" context="{'group_by':'accountable_employee_id'}"/>
                    <filter string="Estado" name="stage" context="{'group_by':'stage'}"/>
                </group>
            </search>
        </field>
    </record>
