<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree view for "activos.informatico.request.category" -->
    <record id="view_activos_informatico_request_category_tree" model="ir.ui.view">
        <field name="name">view.activos.informatico.request.category.tree</field>
        <field name="model">activos.informatico.request.category</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="activos.informatico.request.category_tree" editable="bottom">
                <field name="name" />
                <field name="description" />
                <field name="type" />
            </tree>
        </field>
    </record>
    <!-- Search view for "activos.informatico.request.category" -->
    <record id="view_activos_informatico_request_category_search" model="ir.ui.view">
        <field name="name">view.activos.informatico.request.category.search</field>
        <field name="model">activos.informatico.request.category</field>
        <field name="arch" type="xml">
            <search string="activos.informatico.request.category_search">
                <field name="name" />
                <field name="description" />
                <field name="type" />
                <separator/>
                <filter name="archived" string="Archivados" domain="[('active', '=', False)]"/>
                <separator/>
                <group expand="1" string="Group By">
                    <filter string="Tipo" name="type" context="{'group_by':'type'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="action_activos_informatico_request_category" model="ir.actions.act_window">
        <field name="name">Categorias de solicitudes</field>
        <field name="res_model">activos.informatico.request.category</field>
        <field name="view_id" ref="view_activos_informatico_request_category_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Agregar un categoria de soporte
          </p>
            <p>
            Permite identificar los activos informaticos
          </p>
        </field>
    </record>
    <record id="view_activos_informatico_request_tree" model="ir.ui.view">
        <field name="name">view.activos.informatico.request.tree</field>
        <field name="model">activos.informatico.request</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="activos.informatico.request_tree" >
                <field name="name" />
                <field name="category_id" />
                <field name="requester_employee_id" />
                <field name="accountable_employee_id" />
                <field name="stage" />
                <field name="description" />
            </tree>
        </field>
    </record>
    <record id="view_activos_informatico_request_form" model="ir.ui.view">
        <field name="name">view.activos.informatico.request.form</field>
        <field name="model">activos.informatico.request</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Solicitudes" >
                <header>
                    <button string="En proceso"
                        class="btn btn-primary"
                        type="object"
                        name="action_stage_change"
                        attrs="{'invisible': [('stage', 'not in', ('new' ))]}"
                        context = "{'new_stage':'process'}"
                        />
                    <button string="Terminado"
                        class="btn btn-primary"
                        type="object"
                        name="action_stage_change"
                        attrs="{'invisible': [('stage', 'not in', ('process' ))]}"
                        context = "{'new_stage':'done'}"
                        />
                    <button string="Cancelado"
                        class="btn btn-secondary"
                        type="object"
                        name="action_stage_change"
                        attrs="{'invisible': [('stage', 'not in', ('new','process'))]}"
                        context = "{'new_stage':'cancel'}"
                        />
                    <field name="stage" widget="statusbar" />
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <field name="active" invisible="1"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" placeholder="Número de solicitud"  
                        readonly="1"
                        />
                        </h1>
                        <div invisible="context.get('default_category_id')">
                            <label for="category_id" class="oe_edit_only" />
                            <h3>
                                <field name="category_id" placeholder="Tipo de solicitud"  
                        />
                            </h3>
                        </div>
                    </div>
                    <group >
                        <field name="requester_employee_id"/>
                        <field name="accountable_employee_id" />
                        <field name="description" required="1"/>
                    </group>
                    <group name="name" string="Activo a optimizar" attrs="{'invisible': [('category_id', '!=', %(activos_informatico.request_category_optimization)d)]}">
                        <field name="job_positions_allow_ids" invisible="1" />
                        <field name="fixed_asset_id" />
                    </group>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
